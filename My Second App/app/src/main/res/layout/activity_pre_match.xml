<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreMatchActivity">

    <ImageButton
        android:id="@+id/userProfileButton"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/usersmall"
        android:onClick="toUserProfile"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="18dp"
        android:text="Profile"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/destinationText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Enter Destination"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/enterDestination"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:gravity="center_horizontal"
        android:visibility="visible"/>

    <Button
        android:id="@+id/findMatch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Find Match"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:visibility="visible"
        android:onClick="displayPrompt"/>

    <android.support.v7.widget.CardView
        android:layout_width="262dp"
        android:layout_height="314dp"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/findMatchPromptView">

        <RelativeLayout
            android:id="@+id/findMatchPrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/MatchTitle"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="47dp"
                android:layout_toEndOf="@+id/backArrowMatchPrompt"
                android:text="Matching Questions"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/backArrowMatchPrompt"
                android:layout_width="44dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:src="@drawable/backarrowsmall"
                android:onClick="removePrompt"/>

            <TextView
                android:id="@+id/promptQ1"
                android:layout_width="149dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="58dp"
                android:text="How much luggage do you have with you?" />

            <Spinner
                android:id="@+id/promptQ1Spinner"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/promptQ1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="155dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:id="@+id/promptQ2"
                android:layout_width="149dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="109dp"
                android:text="Do you have a pet with you?" />

            <Spinner
                android:id="@+id/promptQ2Spinner"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/promptQ1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="156dp"
                android:layout_marginBottom="-50dp" />

            <TextView
                android:id="@+id/promptQ3"
                android:layout_width="149dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="156dp"
                android:text="How many people are you willing to ride with?" />

            <Spinner
                android:id="@+id/promptQ3Spinner"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/promptQ1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="154dp"
                android:layout_marginBottom="-97dp" />

            <TextView
                android:id="@+id/promptQ4"
                android:layout_width="149dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="209dp"
                android:text="How large is your group?" />

            <Spinner
                android:id="@+id/promptQ4Spinner"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/promptQ1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="156dp"
                android:layout_marginBottom="-150dp" />

            <Button
                android:id="@+id/findMatchPromptButton"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="82dp"
                android:layout_marginBottom="7dp"
                android:background="@color/colorPrimary"
                android:text="Find Match"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</fragment>